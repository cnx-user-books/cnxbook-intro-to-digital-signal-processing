			<m:apply>
			  <m:ci type="fn" class="discrete">X</m:ci>
			  <m:ci>k</m:ci>
			</m:apply>
			<m:apply>
			  <m:exp/>
			  <m:apply>
			    <m:times/>
			    <m:imaginaryi/>
			    <m:cn>2</m:cn>
			    <m:pi/>
			    <m:apply>
			      <m:divide/>
			      <m:ci>k</m:ci>
